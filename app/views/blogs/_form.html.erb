<%= javascript_pack_tag 'application' %>

<div class='form-container z-depth-3'>
  <%= form_for @blog, :url =>"/blogs/#{@blog.id}" do |f| %>
    <div class='form'>
      <div class='input-field'>
        <%= f.label :title, "Title", :class => "form-label" %>
        <%= f.text_field :title, :class => "validate", required: true %>
      </div>
      <div class='input-field'>
        <%= f.label :author, "Author", :class => "form-label" %>
        <%= f.text_field :author, :class => "validate", required: true %>
      </div>
      <div class='input-field'>
        <%= f.rich_text_area :body %>
      </div>

      <div class='form_button_container center'>
        <%= f.submit "Submit", :class => 'waves-effect waves-light btn-large hoverable' %>
        <%= link_to "Nevermind", admin_path, :class => 'waves-effect waves-light btn-large deep-orange hoverable' %>
      </div>
    </div>
  <% end %>
</div>

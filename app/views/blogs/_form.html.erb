<div class='form-container z-depth-3'>
  <%= form_for @blog, :url =>"/blogs/#{@blog.id}" do |f| %>
    <div class='form'>
      <div class='input-field'>
        <%= f.label :title, "Title", :class => "form-label" %>
        <%= f.text_field :title %>
      </div>
      <div class='input-field'>
        <%= f.label :author, "Author", :class => "form-label" %>
        <%= f.text_field :author %>
      </div>
      <div class='input-field'>
        <%= f.label :content, "Content", :class => "form-label" %>
        <%= f.text_area :content, :class => "materialize-textarea" %>
      </div>

      <div class='form_button_container'>
        <%= f.submit "Submit", :class => 'waves-effect waves-light btn-large' %>
      </div>
    </div>
  <% end %>
</div>

<div class='form-container z-depth-3'>
  <%= form_for @announcement, :url =>"/announcements/#{@announcement.id}" do |f| %>
    <div class='form'>
      <div class='input-field'>
        <%= f.label :title, "Title", :class => "form-label" %>
        <%= f.text_field :title %>
      </div>
      <div class='input-field'>
        <%= f.label :content, "Content", :id => "announcement-content-form-text-area" , :class => "form-label" %>
        <%= f.text_area :content, :class => "materialize-textarea" %>
      </div>

      <div class='form_button_container'>
        <%= f.submit "Submit", :class => 'waves-effect waves-light btn-large' %>
        <%= link_to "Nevermind", admin_path, :class => 'waves-effect waves-light btn-large deep-orange hoverable' %>
      </div>
    </div>
  <% end %>
</div>


<h2 class="header center orange-text">Upcoming GADA Events</h2>

<div class="container">
  <% @upcoming_events.each do |event| %>
    <div class="form-container z-depth-3">
      <% if user_signed_in? %>
        <div class="right">
          <%= link_to("/events/#{event.id}/edit") do %>
            <i class="material-icons">edit</i>
          <% end %>
          <%= link_to("/events/#{event.id}", method: :delete, data: {confirm: "Are you sure you want to delete this event?"}) do %>
            <i class="material-icons">delete</i>
          <% end %>
        </div>
      <% end %>
      <h4 class="header light"><%= event.title %></h4>
      <h5><%= event.date.strftime("%A %B %e, %Y") %></h5>
      <h5><%= event.time %></h5>
      <h6><%= event.description %></h6>
      <% if event.link %>
        <h6><%= link_to event.link_text, event.link %></h6>
      <% end %>
    </div>
    <br>
  <% end %>
</div>

<div class='form-container z-depth-3'>
  <%= form_for @event, :url =>"/events/#{@event.id}" do |f| %>
    <div>
      <div class='input-field'>
        <%= f.label :title, "Title", :class => "form-label" %>
        <%= f.text_field :title, :class => "validate", required: true %>
      </div>
      <div class='input-field'>
        <%= f.label :date, "Date", class: 'active' %>
        <%= f.date_field :date, required: true %>
      </div>
      <div class='input-field'>
        <%= f.label :time, "Time", class: 'active' %>
        <%= f.time_field :time, required: false %>
      </div>
      <div class='input-field'>
        <%= f.label :image_url, "Link to hosted image", :class => "active" %>
        <%= f.text_field :image_url, :class => "validate", :placeholder => "Optional - a direct https link to a hosted image. ex: https://i.imgur.com/nLJvnz4.png" %>
      </div>
      <div class='input-field'>
        <%= f.label :description, "Description", :id => "event-description-form-text-area" , :class => "form-label" %>
        <%= f.text_area :description, :class => "materialize-textarea validate", required: true %>
      </div>
      <div class='input-field'>
        <%= f.label :location, "Location", :id => "event-description-form-text-area" , :class => "form-label" %>
        <%= f.text_area :location, :class => "materialize-textarea validate", required: true %>
      </div>
      <div class='input-field'>
        <%= f.label :link, "Link", :class => "active" %>
        <%= f.text_field :link, :placeholder => "Optional - Link to external site such as Evite page" %>
      </div>
      <div class='input-field'>
        <%= f.label :link_text, "Link Text", :class => "active"%>
        <%= f.text_field :link_text, :placeholder => "Required if using Link - What text should appear to lead to link above? Ex: 'RSVP on evite'" %>
      </div>

      <div class='form_button_container center'>
        <%= f.submit "Submit", :class => 'waves-effect waves-light btn-large' %>
        <%= link_to "Nevermind", admin_path, :class => 'waves-effect waves-light btn-large deep-orange hoverable' %>
      </div>
    </div>
  <% end %>
</div>

